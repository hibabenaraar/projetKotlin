<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Conteneur principal de tout le contenu dÃ©filable -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Heading for the section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="16dp">
            <TextView
                android:text="Our Services"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- First Service Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/plumbing"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/service_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plumbing"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/service_description_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Short description of service 1"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btn_see_workers_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See Workers"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Second Service Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/electrical"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/service_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electrical"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/service_description_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Short description of service 2"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btn_see_workers_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See Workers"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Third Service Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/maintenance"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/service_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maintenance"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/service_description_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Short description of service 3"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btn_see_workers_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See Workers"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
